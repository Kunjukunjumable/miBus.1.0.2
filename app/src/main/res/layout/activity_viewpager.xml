<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:id="@+id/primaryLinear"
    android:background="@color/colorPrimary"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.70">

        <RelativeLayout
            android:id="@+id/relativecourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/course_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:prompt="@string/Course"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativebatch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/batch_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeterm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/term_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <RelativeLayout
            android:id="@+id/relativediv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/div_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativesub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"

            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/sub_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:backgroundTint="@color/colorAccent"
                android:layout_margin="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativesche"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"

            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/sche_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:backgroundTint="@color/colorAccent"
                android:layout_margin="1dp"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_below="@+id/linear2"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="2.6">


        <GridView
            android:numColumns="auto_fit"
            android:gravity="center"
            android:columnWidth="70dp"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gridAttendance"
            />


    </RelativeLayout>

   <!-- <RelativeLayout
        android:id="@+id/relative2"
        android:layout_below="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="0.9">


        <GridView
            android:numColumns="auto_fit"
            android:gravity="center"
            android:columnWidth="40dp"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gridabsent"
            />


    </RelativeLayout>
-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.95">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_below="@+id/textInput2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="@drawable/loginxml"
            android:padding="5dp"
            android:text="Save"/>


    </RelativeLayout>

</LinearLayout>