<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00bff3</item>
        <!--<item name="colorControlNormal">#00bff3</item>
        <item name="colorControlActivated">#00bff3</item>
        <item name="colorControlHighlight">#00bff3</item>-->

    </style>

    <style name="TextAppearence.App.Autocomplete" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00bff3</item>
        <item name="colorControlNormal">#00bff3</item>
        <item name="colorControlActivated">#00bff3</item>
        <item name="colorControlHighlight">#00bff3</item>

    </style>

    <style name="Theme.UserDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#646a71</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/colorAccent</item>

    </style>
    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>


</resources>
