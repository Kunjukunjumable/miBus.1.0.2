<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <stroke android:color="@color/colorAccent" android:width="1dp"></stroke>
            <solid android:color="@color/colorPrimaryLightnew"></solid>
            <corners android:radius="0dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke android:color="@color/colorAccent" android:width="1dp"></stroke>
            <solid android:color="@color/colorPrimaryGreyLightese"></solid>
            <corners android:radius="0dp"></corners>

        </shape>
    </item>
</selector>