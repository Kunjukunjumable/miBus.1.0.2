<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:id="@+id/primaryLinear"

    android:background="@color/colorPrimary"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.70">

        <RelativeLayout
            android:id="@+id/relativecourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/course_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:prompt="@string/Course"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativebatch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/batch_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeterm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/term_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <RelativeLayout
            android:id="@+id/relativediv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/div_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativesub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"

            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/sub_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:backgroundTint="@color/colorAccent"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_margin="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativesche"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"

            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/exe_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:backgroundTint="@color/colorAccent"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_margin="1dp"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorWhite"
        android:text="Pick date and time"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rel3"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="0.55"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView
            android:id="@+id/textStartlbl"
            android:layout_alignParentLeft="true"
            android:text="Starts"
            android:gravity="center"
            android:textColor="@color/colorDarktGreyBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textStartDate"
            android:text="Starts"
            android:gravity="center"

            android:layout_toLeftOf="@+id/textStartTime"
            android:textColor="@color/colorDarktGreyBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textStartTime"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:textColor="@color/colorDarktGreyBox"
            android:text="Click"

            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel4"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_weight="0.55"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView
            android:id="@+id/textEndlbl"
            android:layout_alignParentLeft="true"
            android:text="Ends"
            android:gravity="center"
            android:textColor="@color/colorDarktGreyBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/textEndDate"
            android:text="Click"
            android:textColor="@color/colorDarktGreyBox"
            android:layout_toLeftOf="@+id/textEndTime"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textEndTime"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"

            android:textColor="@color/colorDarktGreyBox"
            android:text="Click"

            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_below="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.55">


        <EditText
            android:id="@+id/examName"
            android:layout_width="match_parent"
            android:textColorHint="@color/colorLightGreyLight"
            android:padding="10dp"
            android:textColor="#000000"
            android:hint="Enter name"
            android:imeOptions="actionDone"
            android:textSize="15sp"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.95">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_below="@+id/textInput2"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:background="@drawable/loginxml"
            android:padding="5dp"
            android:text="Save"/>


    </RelativeLayout>

</LinearLayout>