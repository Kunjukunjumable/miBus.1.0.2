<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:id="@+id/primaryLinear"
    android:background="@color/colorPrimary"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.70">

        <RelativeLayout
            android:id="@+id/relativecourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/course_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_margin="1dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativebatch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/batch_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:background="@drawable/spinner_clicks"
                android:theme="@style/MatchSpinnerTheme"
                android:layout_height="50dp"
                android:layout_margin="1dp"/>

        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <RelativeLayout
            android:id="@+id/relativediv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"
            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/term_spinner"
                android:layout_width="match_parent"
                app:backgroundTint="@color/colorAccent"
                android:layout_height="50dp"
                android:theme="@style/MatchSpinnerTheme"
                android:background="@drawable/spinner_clicks"

                android:layout_margin="1dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativesub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_layoutgreylight"
            android:layout_below="@+id/textDir"

            android:layout_height="wrap_content">


            <Spinner
                android:id="@+id/div_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:backgroundTint="@color/colorAccent"
                android:theme="@style/MatchSpinnerTheme"
                android:background="@drawable/spinner_clicks"

                android:layout_margin="1dp"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_below="@+id/linear2"
        android:background="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:paddingLeft="5dp"

        android:layout_weight="0.5">


        <ImageView
            android:id="@+id/imgpeople"
            android:background="@drawable/ic_lib"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/tv_title"
            android:layout_toRightOf="@+id/imgpeople"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:backgroundTint="@color/colorPrimarylight"
            android:hint="Subject"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"

            android:paddingBottom="10dp"
            android:textColorHint="@color/colorLightGreyLight"

            android:textColor="@color/colorPrimary"
            />



    </RelativeLayout>




     <RelativeLayout
         android:id="@+id/relative2"
         android:layout_below="@+id/linear2"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_marginLeft="10dp"
         android:background="@color/colorWhite"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:layout_weight="1.5">


         <EditText
             android:id="@+id/edit_replycontent"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="bottom"
             android:backgroundTint="@color/colorPrimarylight"
             android:hint="Type message"
             android:imeOptions="actionDone"
             android:paddingBottom="10dp"
             android:textColorHint="@color/colorLightGreyLight"
             android:textColor="@color/colorPrimary" />


     </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.95">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/loginxml"
            android:padding="5dp"
            android:text="Save"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_toRightOf="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/loginxml"
            android:padding="5dp"
            android:text="CANCEL"/>

    </RelativeLayout>

</LinearLayout>